<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "nz.govt.wcc.test1"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Phonegap HelloWorld App</name>

    <description>App itilising phonegaps initial build</description>

    <author href="http://www.efodder.net" email="rudi.rademacher@wcc.govt.nz">Rudi Rademacher</author>
      
    
    <!-- PLATFORM SELECTION -->

    <gap:platform name="android" />
	<!--<gap:platform name="winphone" />-->
	<!--<gap:platform name="ios" />-->
	
	
	<preference name="permissions" value="none"/>
	
	<gap:plugin name="org.apache.cordova.device" />
	<gap:plugin name="org.apache.cordova.camera" />
	<gap:plugin name="org.apache.cordova.geolocation" />
	<gap:plugin name="org.apache.cordova.device-orientation" />
	
	<feature name="http://api.phonegap.com/1.0/battery"/>
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
        
    <access origin="*" />

</widget>